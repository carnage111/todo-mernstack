<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todos</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav>
        <ul>
            <li><a>Logo</a></li>
            <li>Welcome, <%= name %></li>
            <li><a href="/api/v1/user/logout">Logout</a></li>
            <li><a href="/api/v1/user/register">Register</a></li>
            <li><a href="/api/v1/user/login">Login</a></li>
        </ul>
    </nav>

    <div class="input_container">
        <h1>Todos</h1>
        <form action="/api/v1/todo" method="post">
            <input type="text" name="name">
            <button type="submit">Create</button>
        </form>
    </div>

    <div class="todo_list">
        <h2>List of todos</h2>
        <table>
            <tr>
                <th>Todo</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
            <% todos.forEach(todo => { %>
                <tr>
                    <td><%= todo.name %></td>
                    <td><a href="/api/v1/todo/<%= todo._id %>">Update</a></td>
                    <td>
                        <form action="/api/v1/todo/<%= todo._id %>?_method=DELETE" method="post">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </table>
    </div>  
</body>
</html>
